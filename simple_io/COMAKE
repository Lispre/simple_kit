#edit-mode: -*- python -*-
#coding:gbk

#工作路径.
WORKROOT('./')

#使用硬链接copy.
CopyUsingHardLink(True)

#支持32位/64位平台编译
ENABLE_MULTI_LIBS(True)

#C预处理器参数.
CPPFLAGS('-D_GNU_SOURCE -D__STDC_LIMIT_MACROS -DVERSION=\\\"1.9.8.7\\\"')
#为32位目标编译指定额外的预处理参数
#CPPFLAGS_32('-D_XOPEN_SOURE=500')

#C编译参数.
CFLAGS('-g -pipe -W -Wall -fPIC')

#C++编译参数.
CXXFLAGS('-g -pipe -W -Wall -fPIC')

#IDL编译参数
IDLFLAGS('--compack')

#UBRPC编译参数
UBRPCFLAGS('--compack')

#头文件路径.
INCPATHS('. ./include ./output ./output/include')

#使用库
#LIBS('./libsimple_io.a')

#链接参数.
LDFLAGS('-lpthread -lrt')

#依赖模块
#CONFIGS('lib2/ullib')

#为32位/64位指定不同的依赖路径.
#CONFIGS_32('lib2/ullib')
#CONFIGS_64('lib2-64/ullib')

user_sources='sio.c sio_stream.c sio_buffer.c sio_timer.c sio_dgram.c'
user_headers='sio.h sio_stream.h sio_buffer.h sio_timer.h sio_dgram.h'

#可执行文件
Application('test_sio',Sources('test_sio.c libsio.a'), Prefixes('libsio.a'), )
Application('test_sio_stream_fork_server',Sources('test_sio_stream_fork_server.c libsio.a'), Prefixes('libsio.a'), )
Application('test_sio_stream_server',Sources('test_sio_stream_server.cpp libsio.a'), Prefixes('libsio.a'), )
Application('test_sio_stream_multi_server',Sources('test_sio_stream_multi_server.cpp libsio.a'), Prefixes('libsio.a'), )
Application('test_sio_stream_client',Sources('test_sio_stream_client.cpp libsio.a'), Prefixes('libsio.a'), )
Application('test_sio_dgram_server',Sources('test_sio_dgram_server.c libsio.a'), Prefixes('libsio.a'), )
Application('test_sio_dgram_client',Sources('test_sio_dgram_client.c libsio.a'), Prefixes('libsio.a'), )
#静态库
StaticLibrary('sio',Sources(user_sources),HeaderFiles(user_headers))
#共享库
#SharedLibrary('simple_io',Sources(user_sources),HeaderFiles(user_headers))
#子目录
#Directory('demo')
